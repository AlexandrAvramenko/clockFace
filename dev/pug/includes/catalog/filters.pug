include ../../mixins/accordion
include ../../mixins/checkbox
include ../../mixins/baners

section.filters
	.filters__wrapper
		.filters__heading
			img(src="./img/filters.svg" alt="icon")
			span.text Фильтры
		.filters__content
			.filters__accordion-wrapper
				h4.no-uppercase.heading Фильтры
				+accordion('Кому')
					+checkbox('Мужские')
					+checkbox('Женские')
					+checkbox('Унисекс')
				+accordion('Наличие')
					+checkbox('В наличии')
					+checkbox('Ожидаемые поступления')
				+accordion('Бренд')
					input(type='text' class='search-brand' placeholder='Поиск по брендам')
					+checkbox('A.Lange & Sohne', '(3)')
					+checkbox('Arnold and Son', '(1)')
					+checkbox('Audemars Piguet', '(7)')
					+checkbox('Baume & Mercier', '(4)')
					+checkbox('Bell & Ross', '(2)')
					+checkbox('Blancpain', '(3)')
					+checkbox('BLU', '(1)')
					+checkbox('Bovet', '(1)')
					.all-brends
						a.link(href="/") Все бренды
						img(src="./img/chevron.svg" alt="icon")
				+accordion('Цена', 'price')
					.price-range
						.price-range-fields
							input(type="number" min=0 max="9900" oninput="validity.valid||(value='0');" id="min_price" class="price-range-field")
							span.dash &mdash;
							input(type="number" min=0 max="10000" oninput="validity.valid||(value='10000');" id="max_price" class="price-range-field")
						div(id="slider-range" class="price-filter-range" name="rangeInput")
				+accordion('Поступления')
				+accordion('Состояние')
				+accordion('Материал')
				+accordion('Форма')
				+accordion('Ремешок')
				+accordion('Механизм')
			.btn-wrapper
				+button('btn-secondary', 'Cбросить')
				+button('btn-primary filters__close', 'Cвернуть')
		+baners('filters')

